<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
tools:ignore="LabelFor"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".FireBase">

<TextView
    android:id="@+id/textView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:text="Codigo" />

<EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/txtCodigo"
    android:layout_below="@+id/textView"
    android:layout_alignParentStart="true"
    android:layout_alignParentEnd="true"
    android:inputType="text"
    android:autofillHints="" />

<TextView
    android:id="@+id/textView3"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/txtCodigo"
    android:layout_alignParentStart="true"
    android:text="Nombre" />

<EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/txtNombre"
    android:layout_below="@+id/textView3"
    android:layout_alignParentStart="true"
    android:inputType="text"
    android:layout_alignEnd="@+id/txtCodigo"
    android:autofillHints="" />

<TextView
    android:id="@+id/textView4"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/txtNombre"
    android:layout_alignParentStart="true"
    android:text="Pais" />

<EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/txtPais"
    android:layout_below="@+id/textView4"
    android:layout_alignEnd="@+id/txtNombre"
    android:inputType="text"
    android:layout_alignParentStart="true"
    android:autofillHints="" />

<TextView
    android:id="@+id/textView5"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/txtPais"
    android:layout_alignParentStart="true"
    android:text="Ingredientes" />

<EditText
    android:id="@+id/txtIngredientes"
    android:layout_width="wrap_content"
    android:layout_height="100dp"
    android:layout_below="@+id/textView5"
    android:layout_alignEnd="@+id/txtPais"
    android:layout_alignParentStart="true"
    android:layout_alignParentEnd="false"
    android:autofillHints=""
    android:inputType="textMultiLine" />

<TextView
    android:id="@+id/textView2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/txtIngredientes"
    android:layout_alignParentStart="true"
    android:text="Pasos" />

<EditText
    android:id="@+id/txtPasos"
    android:layout_width="wrap_content"
    android:layout_height="100dp"
    android:layout_below="@+id/textView2"
    android:layout_alignEnd="@+id/txtIngredientes"
    android:layout_alignParentStart="true"
    android:layout_alignParentEnd="false"
    android:autofillHints=""
    android:inputType="textMultiLine" />

<Button
    android:id="@+id/button_ING"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/txtIngredientes"
    android:layout_alignParentStart="true"
    android:layout_marginStart="2dp"
    android:layout_marginTop="169dp"
    android:text="Ingreso" />

<Button
    android:id="@+id/button_Cons"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignTop="@+id/button_ING"
    android:layout_toEndOf="@+id/button_ING"
    android:text="Consulta" />

<Button
    android:id="@+id/button_ELIM"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignTop="@+id/button_Cons"
    android:layout_toEndOf="@+id/button_Cons"
    android:text="Eliminar" />

<Button
    android:id="@+id/button_UPD"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignTop="@+id/button_ELIM"
    android:layout_toEndOf="@+id/button_ELIM"
    android:text="Modif" />

</RelativeLayout>